extends ../jade/base

block headerTitle
  +title(l.titFileBans)

block append bottomScripts
  +script('ext.js')

- var exampleHash = '9e107d9d372bb6826bd81d3542a419d6'; 

block content
  section
    form#placeHashBanForm(action='/placeHashBan.js', method='post',
        enctype='multipart/form-data')
      label(for='hashField') #{l.guiHashBanLabel}:
      input#hashField(type='text', name='hash', placeholder=exampleHash)
      input#boardIdentifier(type='hidden', name='boardUri')
      input#createFormButton(type='submit', value=l.guiPlaceHashBan)
      input#createJsButton(type='button', value=l.guiPlaceHashBan,
          onclick='placeHashBan()', style='display: none;')

  section#hashBansDiv

block pageId
  +pageId('hashBans')
