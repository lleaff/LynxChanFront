extends ../jade/base

block headerTitle
  +title(l.titRulesManagement)

block append styles
  +style('ext.css')
block append bottomScripts
  +script('ext.js')

block content
  h1 #{l.titNewRule}
  form(action='/createRule.js', method='post',
      enctype='multipart/form-data')
    input#boardIdentifier(type='hidden', name='boardUri')
    label.hidden(for='fieldRule') l.guiRule
    input#fieldRule(type='text', name='rule')
    input#addFormButton(type='submit',
        value=l.guiAddRule)
    input#addJsButton(type='button', onclick='addRule()',
        value=l.guiAddRule, style='display: none;')

  h1 #{l.titCurrentRules}
  section#divRules

block pageId
  +pageId('ruleManagement')
