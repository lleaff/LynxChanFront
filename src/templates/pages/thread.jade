doctype html
html
  head
    meta(charset='UTF-8')
  body
    h1#labelName
    h3#labelDescription
    a(href='/account.js') Account
    a#linkManagement Manage Board
    a#linkMod Moderate thread
    form(method='post', action='../../replyThread.js', enctype='multipart/form-data')
      | Name:
      input#fieldName(type='text', name='name')
      |     Subject:
      input#fieldSubject(type='text', name='subject')
      |     Email:
      input#fieldEmail(name='email', type='text')
      |     Password:
      input#fieldPassword(name='password', type='password')
      span(style='vertical-align: top;') Message:
      textarea#fieldMessage(rows='8', cols='50', name='message')
      |     Images:
      input#files(type='file', name='files', multiple='')
      img(src='/captcha.js')
      |     Captcha:
      input#fieldCaptcha(name='captcha', type='text')
      input#jsButton(type='button', onclick='postReply()', value='Reply', style='display: none;')
      input#formButton(type='submit', value='Reply')
      input#boardIdentifier(type='hidden', name='boardUri')
      input#threadIdentifier(type='hidden', name='threadId')
    #divControls
      form(action='/threadControls.js', method='post', enctype='multipart/form-data')
        input#checkboxLock(name='lock', type='checkbox')
        |       Lock
        input#checkboxPin(name='pin', type='checkbox')
        |       Pin
        input#controlBoardIdentifier(type='hidden', name='boardUri')
        input#controlThreadIdentifier(type='hidden', name='threadId')
        input#lockFormButton(type='submit', name='action', value='Lock')
        input#lockJsButton(type='button', onclick='setLock()', style='display: none;', value='Lock')
        input#pinFormButton(name='action', type='submit', value='Pin')
        input#pinJsButton(type='button', onclick='setPin()', style='display: none;', value='Pin')
    form(method='post', action='../../contentActions.js', enctype='multipart/form-data')
      #divPostings
      |     Reason:
      input#reportFieldReason(type='text', name='reason')
      #divExpiration
        | Expiration:
        input#fieldExpiration(type='text', name='expiration')
      |     Password:
      input#deletionFieldPassword(type='password', name='password')
      input#checkboxGlobal(type='checkbox', name='global')
      |     Global
      input#deleteFormButton(type='submit', value='Delete', name='action')
      input#deleteJsButton(type='button', style='display: none;', onclick='deletePosts()', value='Delete')
      input#inputBan(type='submit', value='Ban', name='action')
      input#banJsButton(type='button', style='display: none;', onclick='banPosts()', value='Ban')
      input#reportFormButton(type='submit', value='Report', name='action')
      input#reportJsButton(type='button', style='display: none;', onclick='reportPosts()', value='Report')
  script(src='http://static.localhost:8080/settings.js')
  script(src='http://static.localhost:8080/api.js')
  script(src='http://static.localhost:8080/thread.js')
  script(src='http://static.localhost:8080/posting.js')
