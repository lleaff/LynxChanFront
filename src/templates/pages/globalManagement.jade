extends ../jade/base

block headerTitle
  +title('#userLabel')

  form#addStaffForm(method='post', enctype='multipart/form-data',
    action='/setGlobalRole.js')
    label(for='fieldLogin') User login: 
      input#fieldLogin(type='text', name='login')
    label(for='newStaffCombo') Role:
      select#newStaffCombo(name='role')
    input#addJsButton(type='button', onclick='addUser()',
      value='Add user', style='display: none;')
    input#addFormButton(type='submit', value='Add user')
  div#divStaff
  a#bansLink(href='/bans.js') Bans
  a(href='/closedReports.js') Closed reports
  div#reportDiv

block append scripts
  +script('reports.js')
  +script('globalManagement.js')
