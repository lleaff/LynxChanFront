extends ../jade/base

block append styles
  +style('ext.css')

block headerTitle
  +title('#boardLabel')

block content
  section#ownerControlDiv
    h2 Add volunteer
    form(action='/setVolunteer.js', method='post',
        enctype='multipart/form-data')
      fieldset
        label(for='addVolunteerFieldLogin') User login:
          input#addVolunteerFieldLogin(type='text', name='login', required)
        input(type='hidden', name='add', value='true')
        input#addVolunteerBoardIdentifier(type='hidden', name='boardUri')
        input#addVolunteerJsButton(type='button', onclick='addVolunteer()',
          value='Add volunteer', style='display: none;')
        input#addVolunteerFormButton(type='submit', value='Add volunteer')

    h2 Ownership transfer
    form(action='/transferBoardOwnership.js', method='post',
      enctype='multipart/form-data')
      fieldset
        label(for='transferBoardFieldLogin') User login:
          input#transferBoardFieldLogin(type='text', name='login', required)
        input#transferBoardIdentifier(type='hidden', name='boardUri')
        input#transferBoardJsButton(type='button',
          onclick='transferBoard()', value='Transfer board', style='display: none;')
        input#transferBoardFormButton(type='submit', value='Transfer board')

    h2 Delete board
    form(method='post', action='/deleteBoard.js',
      enctype='multipart/form-data')
      fieldset
        input#deletionIdentifier(name='boardUri', type='hidden')
        input#deleteBoardFormButton(type='submit', value='Delete board')
        input#deleteBoardJsButton(type='button', onclick='deleteBoard()',
          value='Delete board', style='display: none;')

    h2 Volunteers
    section#volunteersDiv

    ul
      li: a#bannerManagementLink Banners

  section#reports
    ul
      li: a#closedReportsLink Closed reports
      li: a#bansLink Bans
      li: h4 Open reports:
        #reportDiv


block append scripts
  +script('reports.js')
  +script('boardManagement.js')
