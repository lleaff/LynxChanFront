extends ../jade/base

block append styles
  +style('ext.css')
block append scripts
  +script('account.js')

block content
  section#account
    h4 Logged in as #[span#labelLogin]

    form(action='/logout.js')
      input#logoutJsButton(type='button', onclick='logout()',
        style='display: none', value='Logout')
      input#logoutFormButton(type='submit', value='Logout')

    a#globalManagementLink(href='/globalManagement.js') Global management

  section#accountSettings
    h1 Settings
    form(action='/changeAccountSettings.js', method='post',
      enctype='multipart/form-data')
        fieldset
          label(for='emailField') E-mail
            input#emailField(type='text', name='email')
          input#saveFormButton(type='submit', value='Save')
          input#saveJsButton(type='button', value='Save',
            onClick='save()', style='display: none;')

    h2 Password change
    form(action='/changeAccountPassword.js', method='post',
      enctype='multipart/form-data')
      fieldset
        input#fieldPassword(type='password', name='password')
        label(for='fieldNewPassword') New password
          input#fieldNewPassword(type='password', name='newPassword')
        label(for='fieldConfirmation') Confirm new password
          input#fieldConfirmation(type='password', name='confirmation')
        input#passwordFormButton(type='submit', value='Change password')

  section#createBoard
    h1 Create board
    form(action='/createBoard.js', enctype='multipart/form-data',
      method='post')
      fieldset
        label(for='newBoardFieldUri') Board URI
          input#newBoardFieldUri(type='text', name='boardUri')
        label(for='newBoardFieldName') Board name
          input#newBoardFieldName(type='text', name='boardName')
        label(for='newBoardFieldDescription') Board description:
          input#newBoardFieldDescription(type='text',
            name='boardDescription')
        input#newBoardJsButton(type='button', onclick='createBoard()',
          style='display: none', value='Create board')
        input#newBoardFormButton(type='submit', value='Create board')

  section#ownedBoards
    h1 Owned boards
    #boardsDiv
