extends ../jade/base

block content
  section
    h1 Login
    form(action='/login.js', enctype='multipart/form-data', method='post')
      fieldset
        label(for='loginFieldLogin') Username
          input#loginFieldLogin(type='text', name='login',
          placeholder='Username', required)
        label(for='loginFieldPassword') Password
          input#loginFieldPassword(type='password', name='password',
          required)
        input.submit#loginFormButton(type='submit', value='Login')
        input.submit#loginJsButton(type='button', onclick='loginUser()',
          value='Login', style='display: none;')

  section#divCreation
    h1 Register
    form(action='/registerAccount.js', enctype='multipart/form-data',
      method='post')
      fieldset
        label(for='registerFieldLogin')
          span(title='Required') Login*
          input#registerFieldLogin(type='text', name='login',
          placeholder='Username', required)
        label(for='registerFieldPassword')
          span(title='Required') Password*
          input#registerFieldPassword(type='password', name='password',
          required)
        label(for='registerFieldEmail') Email
          input#registerFieldEmail(type='email', name='email',
          placeholder='Email')
        input.submit#registerFormButton(type='submit', value='Register')
        input.submit#registerJsButton(type='button',
          onclick='registerAccount()', value='Register',
          style='display: none;')

  section
    h1 Recover account
    form(action='/requestAccountRecovery.js',
      enctype='multipart/form-data', method='post')
      fieldset
        label(for='recoverFieldLogin') Login
          input#recoverFieldLogin(type='text', name='login',
          placeholder='Username', required)
        input.submit#recoverFormButton(type='submit',
          value='Request recovery')
        input.submit#recoverJsButton(type='button',
          onclick='recoverAccount()', value='Request recovery',
          style='display: none;')

block append scripts
  +script('login.js')
