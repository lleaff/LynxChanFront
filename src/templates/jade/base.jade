//-=Settings
//- Require data passed by gulp 'jade'
//------------------------------------------------------------
- var baseStylesUrls  = [ baseStaticUrl+"/css/main.css" ];
- var baseScriptsUrls = [ ];
//-=Mixins
//------------------------------------------------------------


//-=Layout
//------------------------------------------------------------
doctype html
html
  head
    block head
      meta(charset="utf-8")
      title 
        block title
      block styles
        for styleUrl in baseStylesUrls
          link(rel="stylesheet", href=styleUrl)
  body
    block body
      header
        block header
          header
            block headerTitle
              h1 #{siteTitle}
              //-Menu
            nav#userMenu
              ul
                +userMenuEntry
                  a(href='/account.js') Account
                block userMenu
        //-Content
        div#middle
          block middle
        //-Footer
        footer
          block footer
        block scripts
          for scriptUrl in baseScriptsUrls
            script(src=scriptUrl)
