mixin postForm(options)
  - var actionFile      = '../../'+options.actionFile
  - var actionName      = options.actionName
  - var actionFunction  = options.actionFunction
  //- .postForm
  form(id=attributes.id, class=attributes.class+' postForm',
    method='post', action=actionFile, enctype='multipart/form-data')
    fieldset.authorInfo
      div#divName
        label(for="fieldName") Name:
          input#fieldName(type='text', name='name', placeholder='Name')
      label(for="fieldEmail") Email:
        input#fieldEmail(name='email', type='text', placeholder='Email')
      label(for="fieldPassword") Password:
        input#fieldPassword(name='password', type='password',
        placeholder='Password')
    fieldset.messageArea
      label(for="fieldSubject") Subject:
        input#fieldSubject(type='text', name='subject',
        placeholder='Subject')
      label(for="fieldMessage") Message:
        textarea#fieldMessage(rows='8', cols='50', name='message', required)
      label(for="files") Files:
        input#files(type='file', accept='image/*', multiple='',
          name='files')
        small Max file size: #[span#labelMaxFileSize] MB.
      label(for='checkboxSpoiler') Spoiler
        input#checkboxSpoiler(type='checkbox', name='spoiler')
    fieldset.sendPost
      div#captchaDiv
        label(for="fieldCaptcha", style='display: none;') Captcha
        img#captchaImage(src='/captcha.js')
        //- Input can't be 'required' since the captcha may be
        //-  optional and this element will still be there. Put 'required'
        //-  back when disabled elements are truly removed from sent page
        input#fieldCaptcha(type='text', name='captcha')
        input#reloadCaptchaButton(type='button',
            onclick='reloadCaptcha()', value='Reload captcha',
            style='display: none;')
        small: a(href='/noCookieCaptcha.js', target='_blank') No cookies?
      input.button.submit#jsButton(type='button',
        onclick=actionFunction, value=actionName, style='display: none;')
      input.button.submit#formButton(type='submit', value=actionName)
    block
